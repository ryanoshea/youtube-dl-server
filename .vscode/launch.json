    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": ["8080"],
            "program": "${workspaceFolder}/app/Server.ts",
            "runtimeArgs": ["--es-module-specifier-resolution=node"],
            "runtimeVersion": "13.14.0",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
